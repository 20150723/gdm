#!/bin/bash

for errfile in "$HOME/.gnomerc-errors" "${TMPDIR-/tmp}/gnomerc-$USER" "/tmp/gnomerc-$USER"
do
	if ( cp /dev/null "$errfile" 2> /dev/null )
	then
		chmod 600 "$errfile"
		exec > "$errfile" 2>&1
		break
	fi
done

if [ -x "$HOME/.gnomerc" ]; then
	exec "$HOME/.gnomerc"
else
	exec "@EXPANDED_SYSCONFDIR@/gdm/gnomerc"
fi

